root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,json,yml,yaml,tf,tfvars,lua}]
indent_size = 2

[{Dockerfile,Jenkinsfile}]
indent_size = 4

[*.{md,sh,conf,dockerfile,jenkinsfile}]
indent_size = 4

[*.vim]
indent_style = tab
