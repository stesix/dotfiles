command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[spotify]
label=
interval=persistent
command=playerctl metadata --follow --format '{{artist}} -» {{title}}'

[memory]
label=
separator=false
interval=30

[disk]
label=
interval=30

[iface]
color=#00FF00
interval=10
separator=false

[wifi]
instance=wlp0s20f3
label=
interval=10
separator=false

[cpu_usage]
label=
interval=10
min_width= 100.00%

[battery]
label=
interval=60

[openvpn]
command=/usr/local/share/i3blocks/openvpn
interval=5

[temperature]
label=
interval=10

[kblayout]
label=⌨
command=bash -c 'xkb-switch;xkb-switch -W'
interval=persistent
color=#ffffff
min_width=⌨ de

[time]
command=date '+%Y.%m.%d %H:%M'
interval=30

